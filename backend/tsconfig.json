{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
    ],
    "types":["jest"],
  },
  "include": ["src/**/*", "src/**/*.test.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}